<div class="row">
<%= render "users/list"%>
  <div class="col-xs-9">
  	<h2>Books</h2>
  	<table class="table">
  		<thead>
  			<tr>
  				<th></th>
  				<th>Title</th>
  				<th>Opinion</th>
  			</tr>
  		</thead>
      <% @books.each do |book| %>
  		<tbody>
  			<tr>
  				<td><%= link_to user_path(book.user_id)  do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg", class: "bookimage img-circle pull-left profile-thumb" %>
            <% end %></td>
  				<td><%= book.title %></td>
  				<td><%= book.body %></td>
  			</tr>
  		</tbody>
      <% end %>
  	</table>
  </div>
</div>


