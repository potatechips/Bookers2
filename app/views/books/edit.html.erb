<h2>Editing Book</h2>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %><br>
<%= f.submit "Update Book",class: "btn btn-primary width" %><br>
<%= link_to "show",book_path(@book) %>
|
<%= link_to "Back",books_path %>
<% end %>

