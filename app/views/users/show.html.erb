 <p><%= flash[:notice] %></p>

 <%= render "users/list", book: @book,user: @user,book_new: @book_new %>
 <div class="col-xs-9">
    <h2>Books</h2>

    <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
        <% @books.each do |book| %>
    <tr>
      <th><%= link_to user_path(@user.id)  do %>
          <%= attachment_image_tag book.user, :profile_image,:fill, 60, 60, fallback: "no_image.jpg", class: "bookimage img-circle pull-left profile-thumb" %>
          <% end %>
      </th>
      <th><%= link_to book.title, book %></th>
      <th><%= book.body %></th>
    <tr>
      <% end %>
  </tbody>

</table>
  </div>
</div>
      </div>
    </div>