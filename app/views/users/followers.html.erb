<div class="container">
<div class="row">
<h2>Follower Users</h2>
<table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
<% @users.each do |user| %>
  <tbody>
   <tr>
   <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no-image.jpg", class: "bookimage img-circle pull-left profile-thumb" %></td>
   <td>name: </span><%= link_to user.name, user_path(user.id) %></td>
   <td>フォロー数：<%= user.followings.count %></td>
   <td>フォロワー数：<%= user.followers.count %></td>
   <td><% if current_user != user %>
        <% if user.followed_by?(current_user) %>
            <p><%=link_to "フォロー外す", user_relationships_path(user.id), method: :delete %></p>
        <% else %>
            <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
        <% end %>
       <% end %>
   </td>
   <td><%= link_to "show",user_path(user.id) %></td>
   </tr>
  </tbody>
<% end %>
</table>
</div>
</div>