
<h2>User Info</h2>
<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
    <label>Name</label>
	<%= f.text_field :name %><br>
	<label><%= f.attachment_field :profile_image %>Image</label><br>
	<label>Introduction</label>
	<%= f.text_area :introduction %><br>
	<%= f.submit "Update User" %><br>
<% end %>

